<% layout('/layouts/boilerplate') -%>

<div id="filters">
    <div class=" cols-8  filter-1 " >
       <% for(let category of categories){ %>
            <div class="filter">
                <a href="/listings/category/<%= category.title %>" class="link">
                    <div><i class="<%= category.icon %> "></i></div> <p><%= category.title %></p>
                </a>
            </div>
        <% } %>
            
            <!-- <div class="filter "> 
                <div><i class="fa-solid fa-person-hiking"></i></div> <p>Hiking</p>
            </div> -->
    </div>

    <div class="cols-4 tax-toggle ms-auto">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
        </div>
    </div>
</div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListings){%>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b> <br>
                            &#8377;<%= listing.price.toLocaleString("en-IN") %> /night
                            <i class="tax-info">&nbsp; &nbsp; +18 GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>
